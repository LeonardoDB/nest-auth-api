{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "dtoFileNameSuffix": [
            ".response.ts",
            ".request.ts",
            ".entity.ts"
          ],
          "introspectComments": true,
          "controllerKeyOfComment": "summary"
        }
      }
    ]
  }
}
